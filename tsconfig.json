{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "outDir": "./dist",
    // "rootDir": "./src",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],              // src 폴더 전체
      "@scripts/*": ["scripts/*"],    // scripts 폴더 전체
      "@config/*": ["scripts/config/*"],
      "@types/*": ["scripts/types/*"],
      "@rag/*": ["scripts/rag/*"],
      "@services/*": ["src/services/*"],
      "@mcp/*": ["src/mcp-server/*"]
    }
  },
  "include": [
    "src/**/*",
    "scripts/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}